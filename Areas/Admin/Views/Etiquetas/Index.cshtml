@model IEnumerable<ContactHUB.Models.Etiqueta>
@{
    ViewData["Title"] = "Etiquetas";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Etiquetas</h2>
        <button class="btn btn-success" id="btnNuevaEtiqueta" data-url="@Url.Action("Crear")"><i class="bi bi-plus-circle"></i> Nueva Etiqueta</button>
    </div>
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080; min-width: 300px;">
        <div id="toast-container"></div>
    </div>
    @await Html.PartialAsync("_TablaEtiquetasPartial", Model)

</div>
@await Html.PartialAsync("_ModalEtiquetaPartial")
<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
<script src="~/js/etiquetas.js" asp-append-version="true"></script>
