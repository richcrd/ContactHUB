@{
    ViewData["Title"] = "Restablecer contrase単a";
    var token = ViewBag.Token as string;
}
<div class="container mt-5">
    <h2>Restablecer contrase単a</h2>
    <form asp-action="Restablecer" method="post" class="mt-4">
        <input type="hidden" name="token" value="@token" />
        <div class="mb-3">
            <label for="nueva" class="form-label">Nueva contrase単a</label>
            <input type="password" class="form-control" id="nueva" name="nueva" required>
        </div>
        <div class="mb-3">
            <label for="repetir" class="form-label">Repetir contrase単a</label>
            <input type="password" class="form-control" id="repetir" name="repetir" required>
        </div>
        <button type="submit" class="btn btn-success">Restablecer</button>
    </form>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>
