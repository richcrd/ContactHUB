@model ContactHUB.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registro de Usuario";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 400px;">
        <div class="text-center mb-4">
            <div class="rounded-circle bg-success bg-gradient d-inline-flex align-items-center justify-content-center mb-2" style="width: 56px; height: 56px;">
                <i class="bi bi-person-plus text-white fs-2"></i>
            </div>
            <h2 class="fw-bold mb-1">Registro de Usuario</h2>
            <p class="text-muted mb-0">Crea tu cuenta para comenzar</p>
        </div>
        @await Html.PartialAsync("~/Views/Shared/_ToastMessages.cshtml")
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" placeholder="Ingrese su usuario" required minlength="4" maxlength="20" pattern="^[a-zA-Z0-9_]+$" title="Solo letras, números y guion bajo. Mínimo 4 caracteres." />
            </div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" required minlength="2" maxlength="50" pattern="^[a-zA-ZáéíóúÁÉÍÓÚñÑ ]+$" title="Solo letras y espacios. Mínimo 2 caracteres." />
            </div>
            <div class="mb-3">
                <label asp-for="Clave" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Clave" type="password" class="form-control" placeholder="Ingrese su clave" required minlength="6" maxlength="30" title="La clave debe tener al menos 6 caracteres." />
                    <button type="button" class="btn btn-outline-secondary" id="toggleClave" tabindex="-1">
                        <span id="iconClave" class="bi bi-eye"></span>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-gradient-success w-100">Registrar</button>
        </form>
        <hr />
        <p class="text-center mb-0">
            ¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión aquí</a>
        </p>
        @await Html.PartialAsync("~/Views/Shared/_PasswordToggleScript.cshtml")
    </div>
</div>
<style>
    .btn-gradient-success {
        background: linear-gradient(90deg, #198754 0%, #20c997 100%);
        border: none;
        color: #fff;
    }
    .btn-gradient-success:hover, .btn-gradient-success:focus {
        background: linear-gradient(90deg, #20c997 0%, #198754 100%);
        color: #fff;
    }
</style>
