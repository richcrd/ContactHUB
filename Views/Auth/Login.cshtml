@{
    ViewData["Title"] = "Login";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 370px;">
        <div class="text-center mb-4">
            <div class="rounded-circle bg-primary bg-gradient d-inline-flex align-items-center justify-content-center mb-2" style="width: 56px; height: 56px;">
                <i class="bi bi-person-lock text-white fs-2"></i>
            </div>
            <h2 class="fw-bold mb-1">Iniciar sesión</h2>
            <p class="text-muted mb-0">Accede a tu cuenta</p>
        </div>
        <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080; min-width: 300px;">
            <div id="toast-container"></div>
        </div>
        <script>
        function showToast(message, type) {
            var toastId = 'toast-' + Date.now();
            var toastHtml = `<div id="${toastId}" class="toast align-items-center text-bg-` + type + ` border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">` +
                `<div class="d-flex">` +
                `<div class="toast-body">` + message + `</div>` +
                `<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>` +
                `</div></div>`;
            var $toast = $(toastHtml);
            $('#toast-container').append($toast);
            var toast = new bootstrap.Toast($toast[0]);
            toast.show();
            $toast.on('hidden.bs.toast', function(){ $toast.remove(); });
        }
        $(function(){
            @if (TempData["Success"] != null)
            {
                <text>showToast('@TempData["Success"]'.replace(/'/g, "\'"), 'success');</text>
            }
            @if (TempData["Error"] != null)
            {
                <text>showToast('@TempData["Error"]'.replace(/'/g, "\'"), 'danger');</text>
            }
        });
        </script>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="usuario" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingrese su usuario" required minlength="4" maxlength="20" pattern="^[a-zA-Z0-9_]+$" title="Solo letras, números y guion bajo. Mínimo 4 caracteres." />
            </div>
            <div class="mb-3">
                <label for="clave" class="form-label">Clave</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="clave" name="clave" placeholder="Ingrese su clave" required minlength="6" maxlength="30" title="La clave debe tener al menos 6 caracteres." />
                    <button type="button" class="btn btn-outline-secondary" id="toggleClave" tabindex="-1">
                        <span id="iconClave" class="bi bi-eye"></span>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-gradient-primary w-100">Iniciar sesión</button>
            <div class="mt-3 text-center">
                <a asp-controller="Recuperacion" asp-area="Admin" asp-action="Solicitar">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
        <hr />
        <p class="text-center mb-0">
            ¿No tienes cuenta? <a asp-action="Register">Regístrate aquí</a>
        </p>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const claveInput = document.getElementById('clave');
                const toggleClave = document.getElementById('toggleClave');
                const iconClave = document.getElementById('iconClave');
                if (toggleClave) {
                    toggleClave.addEventListener('click', function () {
                        if (claveInput.type === 'password') {
                            claveInput.type = 'text';
                            iconClave.classList.remove('bi-eye');
                            iconClave.classList.add('bi-eye-slash');
                        } else {
                            claveInput.type = 'password';
                            iconClave.classList.remove('bi-eye-slash');
                            iconClave.classList.add('bi-eye');
                        }
                    });
                }
            });
        </script>
    </div>
</div>
<style>
    .btn-gradient-primary {
        background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
        border: none;
        color: #fff;
    }
    .btn-gradient-primary:hover, .btn-gradient-primary:focus {
        background: linear-gradient(90deg, #6610f2 0%, #0d6efd 100%);
        color: #fff;
    }
</style>
