@model ContactHUB.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 370px;">
        <div class="text-center mb-4">
            <div class="rounded-circle bg-primary bg-gradient d-inline-flex align-items-center justify-content-center mb-2" style="width: 56px; height: 56px;">
                <i class="bi bi-person-lock text-white fs-2"></i>
            </div>
            <h2 class="fw-bold mb-1">Iniciar sesión</h2>
            <p class="text-muted mb-0">Accede a tu cuenta</p>
        </div>
        @await Html.PartialAsync("~/Views/Shared/_ToastMessages.cshtml")
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" placeholder="Ingrese su usuario" required minlength="4" maxlength="20" pattern="^[a-zA-Z0-9_]+$" title="Solo letras, números y guion bajo. Mínimo 4 caracteres." />
            </div>
            <div class="mb-3">
                <label asp-for="Clave" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Clave" type="password" class="form-control" placeholder="Ingrese su clave" required minlength="6" maxlength="30" title="La clave debe tener al menos 6 caracteres." />
                    <button type="button" class="btn btn-outline-secondary" id="toggleClave" tabindex="-1">
                        <span id="iconClave" class="bi bi-eye"></span>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-gradient-primary w-100">Iniciar sesión</button>
            <div class="mt-3 text-center">
                <a asp-controller="Recuperacion" asp-area="Admin" asp-action="Solicitar">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
        <hr />
        <p class="text-center mb-0">
            ¿No tienes cuenta? <a asp-action="Register">Regístrate aquí</a>
        </p>
        @await Html.PartialAsync("~/Views/Shared/_PasswordToggleScript.cshtml")
    </div>
</div>
<style>
    .btn-gradient-primary {
        background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);
        border: none;
        color: #fff;
    }
    .btn-gradient-primary:hover, .btn-gradient-primary:focus {
        background: linear-gradient(90deg, #6610f2 0%, #0d6efd 100%);
        color: #fff;
    }
</style>
