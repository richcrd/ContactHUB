@{
    ViewData["Title"] = "Login";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 350px;">
        <h2 class="text-center mb-4">Iniciar sesión</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label for="usuario" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingrese su usuario" required minlength="4" maxlength="20" pattern="^[a-zA-Z0-9_]+$" title="Solo letras, números y guion bajo. Mínimo 4 caracteres." />
            </div>
            <div class="mb-3">
                <label for="clave" class="form-label">Clave</label>
                <input type="password" class="form-control" id="clave" name="clave" placeholder="Ingrese su clave" required minlength="6" maxlength="30" title="La clave debe tener al menos 6 caracteres." />
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>
        <hr />
        <p class="text-center mb-0">
            ¿No tienes cuenta? <a asp-action="Register">Regístrate aquí</a>
        </p>
    </div>
</div>
