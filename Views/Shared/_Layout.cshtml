<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ContactHUB</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/custom-bootstrap-colors.css" />
    <link rel="stylesheet" href="~/ContactHUB.styles.css" asp-append-version="true"/>
</head>
<body class="d-flex flex-column min-vh-100">
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1080; min-width: 300px;">
        <div id="toast-container"></div>
    </div>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        function showToast(message, type) {
            var toastId = 'toast-' + Date.now();
            var toastHtml = `<div id="${toastId}" class="toast align-items-center text-bg-${type} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">` +
                `<div class="d-flex">` +
                `<div class="toast-body">${message}</div>` +
                `<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>` +
                `</div></div>`;
            var $toast = $(toastHtml);
            $('#toast-container').append($toast);
            var toast = new bootstrap.Toast($toast[0]);
            toast.show();
            $toast.on('hidden.bs.toast', function(){ $toast.remove(); });
        }
        @if (TempData["Success"] != null)
        {
            <text>showToast('@TempData["Success"]'.replace(/'/g, "\'"), 'success');</text>
        }
        @if (TempData["Error"] != null)
        {
            <text>showToast('@TempData["Error"]'.replace(/'/g, "\'"), 'danger');</text>
        }
    });
    </script>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ContactHUB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contactos" asp-action="Index">Contactos</a>
                        </li>
                        @using Microsoft.EntityFrameworkCore
                        var usuarioRol = Context.RequestServices.GetService(typeof(ContactHUB.Data.ContactDbContext)) is ContactHUB.Data.ContactDbContext db ?
                            db.Usuarios.Include("Rol").FirstOrDefault(u => u.UsuarioNombre == User.Identity.Name)?.Rol?.Nombre : null;
                        if (usuarioRol == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold" asp-area="Admin" asp-controller="RecuperacionAuditoria" asp-action="Index">
                                    <i class="bi bi-shield-lock"></i> Auditoría Recuperación
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-area="Admin" asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-people"></i> Gestión de Roles
                                </a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-flex align-items-center gap-2">
                            <span class="nav-link mb-0">Usuario: @(User.FindFirst("Nombre")?.Value ?? User.Identity.Name)</span>
                            <a class="nav-link text-primary" asp-controller="Perfil" asp-action="Index" title="Editar perfil"><i class="bi bi-person-gear"></i> Perfil</a>
                            <form asp-action="Logout" asp-controller="Auth" method="post" class="d-inline mb-0">
                                <button type="submit" class="btn btn-link nav-link p-0 align-baseline text-danger" style="vertical-align: middle;">Cerrar sesión</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="bg-dark text-white py-4 mt-5 border-top shadow-lg mt-auto">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4 mb-3 mb-md-0">
                <span class="fw-bold fs-5">ContactHUB</span> &copy; 2025<br />
                <small class="text-muted">Proyecto de gestión de contactos moderno y seguro.<br />Desarrollado con ASP.NET Core MVC, Bootstrap, SQL Server y Docker.</small>
            </div>
            <div class="col-md-4 mb-3 mb-md-0">
                <a href="/" class="text-white me-3">Inicio</a>
                <a href="/Contactos" class="text-white me-3">Contactos</a>
                <a href="/Home/Privacy" class="text-white me-3">Términos y condiciones</a>
                <a href="mailto:richardrrc1204@gmail.com" class="text-white">Soporte</a>
            </div>
            <div class="col-md-4 text-md-end">
                <span class="fw-bold">Síguenos</span><br />
                <a href="https://twitter.com" target="_blank" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                <a href="https://facebook.com" target="_blank" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                <a href="https://github.com" target="_blank" class="text-white"><i class="bi bi-github"></i></a>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>