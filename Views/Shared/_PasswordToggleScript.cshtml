<script>
document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('#toggleClave').forEach(function (toggleBtn) {
        const inputGroup = toggleBtn.closest('.input-group');
        if (!inputGroup) return;
        const claveInput = inputGroup.querySelector('input[type="password"], input[type="text"]');
        const iconClave = toggleBtn.querySelector('span');
        if (claveInput && iconClave) {
            toggleBtn.addEventListener('click', function () {
                if (claveInput.type === 'password') {
                    claveInput.type = 'text';
                    iconClave.classList.remove('bi-eye');
                    iconClave.classList.add('bi-eye-slash');
                } else {
                    claveInput.type = 'password';
                    iconClave.classList.remove('bi-eye-slash');
                    iconClave.classList.add('bi-eye');
                }
            });
        }
    });
});
</script>
