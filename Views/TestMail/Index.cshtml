@{
    ViewData["Title"] = "Prueba de envío de correo";
}
<div class="container mt-5">
    <h2>Prueba de envío de correo</h2>
    <form asp-action="Enviar" method="post" class="mt-4">
        <div class="mb-3">
            <label for="destino" class="form-label">Correo de destino</label>
            <input type="email" class="form-control" id="destino" name="destino" required>
        </div>
        <button type="submit" class="btn btn-primary">Enviar correo de prueba</button>
    </form>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>
